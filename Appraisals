appraise "active-6" do
  # Just for the query selector/filtering/ordering extensions etc...
  gem 'activerecord', '> 4', '< 7'
  gem 'sequel', '~> 5'
end
  
appraise "active-7" do
  # Just for the query selector/filtering/ordering extensions etc...
  gem 'activerecord', '>=7'
  gem 'sequel', '~> 5'
end